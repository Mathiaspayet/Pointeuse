<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Permissions pour la localisation -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <!-- Permissions pour le service en arrière-plan -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".MaPointeuseApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaPointeuse">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MaPointeuse.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Service de suivi du pointage en arrière-plan -->
        <service
            android:name=".service.PointageService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location" />

        <!-- Service de démarrage/arrêt automatique avec délai d'annulation -->
        <service
            android:name=".service.AutoPointageService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location" />

        <!-- BroadcastReceiver pour le geofencing natif Android -->
        <receiver
            android:name=".service.GeofenceBroadcastReceiver"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>
